<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:fillViewport="false">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RL_Circuit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:padding="13dp"
            android:autoSizeTextType="uniform"
            android:background="@color/black"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:text="RLC Circuit"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/knowMoreRL"
            android:text="What is RL Circuit ?"
            android:paddingVertical="7dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:paddingRight="27dp"
            android:src="@drawable/rl_circuit_18_2_14_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltage"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textSize="21dp"/>

        <EditText
            android:id="@+id/voltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginHorizontal="5dp"
            android:hint="Enter Voltage..."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resistance"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textSize="21dp"/>

        <EditText
            android:id="@+id/resistance"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"
            android:hint="Enter Resistnce..."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inductance"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textSize="21dp"/>

        <EditText
            android:id="@+id/inductance"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Enter Inductance..."/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit"
            android:paddingVertical="7dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>

</ScrollView>